{
  "name": "website-audit-fixes",
  "version": "1.0.0",
  "description": "Website audit and fixes implementation",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000",
    "serve": "live-server --port=3000 --no-browser",
    "build": "npm run minify:css && npm run minify:js",
    "minify:css": "cleancss -o dist/styles.min.css patches/04-styles-improvements.css",
    "minify:js": "uglifyjs website-improvements.js -o dist/website-improvements.min.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint . --ext .js,.html",
    "lint:fix": "eslint . --ext .js,.html --fix",
    "audit": "python website_auditor.py",
    "lighthouse": "lighthouse http://localhost:3000 --output json --output-path lighthouse-report.json",
    "lighthouse:ci": "lhci autorun",
    "security:check": "npm audit",
    "deploy:staging": "echo 'Deploy to staging'",
    "deploy:production": "echo 'Deploy to production'"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@lhci/cli": "^0.12.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jsdom": "^22.0.0",
    "live-server": "^1.2.2",
    "clean-css-cli": "^5.6.0",
    "uglify-js": "^3.17.0"
  },
  "dependencies": {
    "express": "^4.18.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!tests/**",
      "!dist/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    },
    "extends": ["eslint:recommended"],
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "semi": ["error", "always"]
    }
  },
  "keywords": [
    "website",
    "audit",
    "performance",
    "accessibility",
    "seo"
  ],
  "author": "Website Auditor",
  "license": "MIT"
}
