{
  "name": "website-audit-fixes",
  "version": "1.0.0",
  "description": "Website audit and fixes implementation",
  "main": "index.html",
    "scripts": {
  "preinstall": "node -v",
  "build": "npm run build:try || npm run build:fallback",
  "build:try": "npm run minify:css && npm run minify:js && npm run copy:static",
  "build:fallback": "mkdir -p dist && cp -R index.html *.html dist/ 2>/dev/null || true && mkdir -p dist/assets && cp -R assets/* dist/assets/ 2>/dev/null || true && echo \"Fallback build completed\"",
  "minify:css": "npx cleancss -o dist/styles.min.css patches/04-styles-improvements.css || true",
  "minify:js": "npx uglifyjs website-improvements.js -o dist/website-improvements.min.js || true",
  "copy:static": "mkdir -p dist && cp -R public/* dist/ 2>/dev/null || true"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@lhci/cli": "^0.12.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jsdom": "^22.0.0",
    "live-server": "^1.2.2",
    "clean-css-cli": "^5.6.0",
    "uglify-js": "^3.17.0"
  },
  "dependencies": {
    "express": "^4.18.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!tests/**",
      "!dist/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    },
    "extends": ["eslint:recommended"],
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "semi": ["error", "always"]
    }
  },
  "keywords": [
    "website",
    "audit",
    "performance",
    "accessibility",
    "seo"
  ],
  "author": "Website Auditor",
  "license": "MIT"
}
